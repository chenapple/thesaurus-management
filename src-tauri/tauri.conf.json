{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Thesaurus-Manager",
  "version": "0.9.17",
  "identifier": "com.chenapple.thesaurus-management",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "词库管理",
        "width": 800,
        "height": 600,
        "dragDropEnabled": true,
        "visible": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/**", "$RESOURCE/**"]
      }
    },
    "trayIcon": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true,
    "resources": {
      "scripts/*": "scripts/"
    },
    "windows": {
      "nsis": {
        "languages": ["SimpChinese"],
        "displayLanguageSelector": false
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IENENjYwMEVEREVGRTU1MDMKUldRRFZmN2U3UUJtemNva2picnJ3aTk3VXN3bU9yRncwSEdNZ21XMk1QUndZb3NxS0g0RGZNYU8K",
      "endpoints": [
        "https://github.com/chenapple/thesaurus-management/releases/latest/download/latest.json"
      ]
    }
  }
}
